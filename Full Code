        /* Basic styles for the text generation tool */
        #blog-title-generator {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            font-family: 'Montserrat', sans-serif; /* Changed font to Montserrat */
            text-align: center;
        }

        #topic {
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        #generate-button {
            display: block;
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            color: #fff;
            background-color: #ffc900;
            cursor: pointer;
            transition: background-color 0.3s ease;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        #generate-button:hover {
            background-color: #ffd800;
        }

        .result-title {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .copy-icon {
            position: absolute;
            top: 5px;
            right: 5px;
            cursor: pointer;
        }

        #copy-all-button {
            display: block;
            width: 100%;
            padding: 15px;
